{
  "name": "mern-ts-starter-backend",
  "version": "0.0.1",
  "main": "./build/server.js",
  "engines": {
    "node": "8.* || >= 10.*",
    "yarn": ">=1.*"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/*.d.ts",
      "!server/server.ts",
      "!server/app.ts",
      "!scripts/*"
    ]
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.17.3",
    "http-errors": "^1.7.1",
    "swagger-ui-express": "^4.0.6",
    "tsoa": "^2.4.3",
    "verror": "^1.10.0",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.4",
    "@types/dotenv": "^4.0.0",
    "@types/express": "^4.16.1",
    "@types/http-errors": "^1.6.1",
    "@types/jest": "^23.3.13",
    "@types/node": "^10.12.18",
    "@types/supertest": "^2.0.7",
    "@types/swagger-ui-express": "^3.0.1",
    "@types/verror": "^1.10.3",
    "chalk": "^2.4.1",
    "concurrently": "^4.1.1",
    "jest": "^24.8.0",
    "nodemon": "^1.18.9",
    "nodemon-webpack-plugin": "^3.0.1",
    "prettier": "^1.16.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-loader": "^3.2.0",
    "ts-node": "^8.0.1",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.4",
    "webpack": "^3.9.1"
  },
  "scripts": {
    "start": "webpack --watch",
    "build": "yarn route:gen && webpack --config webpack.config.js",
    "lint": "tslint -c ../tslint.json -p ./tsconfig.json",
    "test": "jest --coverage --colors  --verbose",
    "route:gen": "tsoa swagger && tsoa routes",
    "test:watch": "jest --coverage --colors --watchAll"
  }
}
